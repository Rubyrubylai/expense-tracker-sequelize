<form action="/incomes/{{income.id}}/edit?_method=PUT" method="POST">
    <div class="row my-4">
        <div class="col-2">
            <small>*必填欄位</small>
        </div>
        <div class="col-10">
            <center>請修改你的收入</center>
        </div>
    </div>
    <div class="row my-4">
        <div class="col-2">
            <label for="name">名稱*:</label>
        </div>
        <div class="col-10">
            <input type="text" class="form-control" id="name" value="{{income.name}}" name="name">
        </div>
    </div>
    <div class="row my-4">
        <div class="col-2">
            <label for="date">日期*:</label>
        </div>
        <div class="col-10">
            <input type="date" class="form-control" id="date" value="{{date}}" name="date">
        </div>
    </div>
    <div class="row my-4">
        <div class="col-2">
            <label for="name">類別*:</label>
        </div>
        <div class="col-10">
            <select name="category" id="" class="form-control">
                <option value="薪水" {{#ifEquals income.category "薪水"}}selected{{/ifEquals}}>薪水</option>
                <option value="獎金" {{#ifEquals income.category "獎金"}}selected{{/ifEquals}}>獎金</option>
                <option value="獎金" {{#ifEquals income.category "獎金"}}selected{{/ifEquals}}>紅利</option>
                <option value="其他" {{#ifEquals income.category "其他"}}selected{{/ifEquals}}>其他</option>
            </select>
        </div>
    </div>
    <div class="row my-4">
        <div class="col-2">
            <label for="amount">金額*:</label>
        </div>
        <div class="col-10">
            <input type="number" class="form-control" id="amount" value="{{income.amount}}" name="amount">
        </div>
    </div>
    <div class="row my-4">
        <div class="col-2"></div>
        <div class="col-10">
            <button type="submit" class="btn btn-warning">送出</button>
        </div>
    </div>
</form>