<form action="/incomes/new" method="POST">
    <div class="row my-4">
        <div class="col-2"><small>*必填欄位</small></div>
        <div class="col-10"><center style="font-size: 20px;">請輸入你的收入</center></div> 
    </div>
    <div class="row my-4">
        <div class="col-2"><label for="name">名稱*:</label></div>
        <div class="col-10"><input type="text" class="form-control" id="name" name="name" value="{{name}}"></div>
    </div>
    <div class="row my-4">
        <div class="col-2"><label for="date">日期*:</label></div>
        <div class="col-10"><input type="date" class="form-control" id="date" name="date" value="{{date}}"></div>
    </div>
    <div class="row my-4">
        <div class="col-2"><label for="category">類別*:</label></div>
        <div class="col-10">
            <select id="category" class="form-control" name="category">
                <option value="薪水" {{#ifEquals "薪水" category}}selected{{/ifEquals}}>薪水</option>
                <option value="獎金" {{#ifEquals "獎金" category}}selected{{/ifEquals}}>獎金</option>
                <option value="紅利" {{#ifEquals "紅利" category}}selected{{/ifEquals}}>紅利</option>
                <option value="其他" {{#ifEquals "類別" category}}selected{{/ifEquals}}>其他</option>
            </select>
        </div>
    </div>
    <div class="row my-4">
        <div class="col-2"><label for="amount">金額*:</label></div>
        <div class="col-10">
            <input type="number" class="form-control" id="amount" name="amount" value="{{amount}}">
        </div>
    </div>
    {{>messages}}
    <div class="row">
        <div class="col-2"></div>
        <div class="col-10">
            <center><button type="submit" class="btn btn-warning btn-lg" style="width: 200px;">新增收入</button></center>
        </div>
    </div>
</form>